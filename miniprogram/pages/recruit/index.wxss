/* pages/recruit/index.wxss */
page{
  background-color: #F4F4F4;
  list-style: none;
}
p{
  font-size: 30rpx;
  text-align: center;
  letter-spacing: 1rpx;
}
.jobs{
  width: 100%;
  height: auto;
}
.jobs ul{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.jobs li{
  width: 94%;
  height: 280rpx;
  position: relative;
  right: 0;
  left: 0;
  margin:20rpx auto;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: #fff;
  text-align: center;
}
.jobs > ul > li:first-child{
  margin-top: unset!important;
}
.first{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;

}
.stander{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.third{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.tags{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.tags p{
  display: block;
  height: 30rpx;
  width: 120rpx;
  line-height: 30rpx;
  padding: 10rpx;
  background: #EDEDED;
  font-size: 24rpx;
  border-radius: 10rpx;
  color: rgba(0, 0, 0, 0.5)
}
.fourth{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.btns{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.salary{
  font-size: 32rpx;
  color: #3A82F8;
  
}
.job_title{
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.7);
}
.stander p{
  font-size: 26rpx;
  color:  rgba(0, 0, 0, 0.6);
}

.van-button--info{
  background: #36a8fe!important;

}
.van-button{
  border: 0!important;
  min-height: unset!important;
  border-radius: 10rpx!important;
}
.van-button--small{
  font-size: 26rpx!important;
  min-width: unset!important;
  width: 140rpx!important;
  height: 60rpx!important;
  line-height: 60rpx!important;
  padding: 0 10rpx!important;
}