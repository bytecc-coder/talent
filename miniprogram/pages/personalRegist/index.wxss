/* pages/personalRegist/index.wxss */
p{
  font-size: 30rpx;
}

.regist_tab ul{
  width: 90%;
  margin: 50rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.regist_tab li{
  width: 100%;
  display: flex;
  height: 100rpx;
  justify-content: flex-start;
  align-items: center;
}
.item{
  display: flex;
  width: 35%;
  height: 100rpx;
  justify-content: flex-start;
  align-items: center;
}
.item p{
  display: block;
  font-size: 38rpx;
  text-align: center;
  letter-spacing: 5rpx;
}

.input_tab{
  width: 65%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.input_tab input{
  display: block;
  font-size: 36rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 5rpx;
  outline: none;
  padding-left: 12rpx;
}

.placeholderStyle{
  font-size: 30rpx;
  color: rgba(0,0,0,0.5);
}

.submit{
  width: 100%;
  height: 100%;
}
.submit button{
  width: 90%;
  height: 80%;
  border-radius: 30rpx;
  border: 2px solid #36A8FE;
  color: #36A8FE;
  font-size: 32rpx;
  line-height: 64rpx;
}
.agree{
  display: flex;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
}