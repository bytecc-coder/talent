/* pages/companyRegist/index.wxss */
p{
  font-size: 30rpx;
}

.title{
  display: block;
  width: 100%;
  display: flex;
  justify-content: center;
}
.title p{
  font-size: 50rpx;
  color: #36A8FE;
  text-align: center;
}
.regist_tab ul{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.regist_tab li{
  display: flex;
  justify-content: space-between;
}
.item{
  display: flex;
  width: 40%;
  justify-content: center
}
.item p{
  display: block;
  text-align: center;
  letter-spacing: 5rpx;
}

.input_tab{
  width: 60%;
  display: flex;
  justify-content: center;
  align-content: center;
}
.input_tab input{
  width: 90%;
  height: 50rpx;
  border-radius: 20rpx;
  outline: none;
  border: 1rpx solid #36A8FE;
}
.input_tab input::-webkit-input-placeholder{
  font-size: 30rpx;
  color: rgba(0,0,0,0.05);
}